<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.OnboardingFragment1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/onboarding_1" />

        <TextView
            android:layout_below="@id/image"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensans_bold"
            android:text="Real-Time Exchange Rates"
            android:textColor="@color/subColor"
            android:textAlignment="center"
            android:textSize="26sp" />

        <TextView
            android:layout_below="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensans_bold"
            android:lineHeight="30dp"
            android:text="Stay updated with live exchange rates worldwide for informed trading and travel decisions."
            android:textAlignment="center"
            android:textColor="@color/subColor"
            android:textSize="20sp" />

    </RelativeLayout>
</FrameLayout>
